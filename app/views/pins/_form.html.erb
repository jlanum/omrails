<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :product, as: :text, input_html: { rows: "2" } %>
		<%= f.input :description, as: :text, input_html: { rows: "2" } %>
		<%= f.input :brand, as: :text, input_html: { rows: "2" } %>
		<%= f.input :price, as: :text, input_html: { rows: "2" } %>
    
    


  <div class="form-actions">
    <%= f.button :submit, "Add Product", class: "btn btn-purple" %>
  </div>
<% end %>
