<h1>All users</h1>

<div class="product-table1">
<table class="table">
	<thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
			<th>Role?</th>
			<th>Delete</th>
    </tr>
  </thead>
  <tbody>
	<tr>
<% User.all.each do |user| %>
	<td> <%= user.name %> </td>
	<td> <%= user.email %> </td>
	<td> <%= user.role %> </td>
	<td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	
	</tr>
	</tbody>
	<% end %>
</table>
