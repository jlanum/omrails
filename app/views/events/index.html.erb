<h1>Listing events</h1>
<div class="product-table-show">
<table class="table table-bordered table-striped">
              <thead>
  <tr>
    <th>Title</th>
    <th>Starts</th>
    <th>Ends </th>
    <th>All day</th>
    <th>Description</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>
<% @events.each do |event| %>
  <tbody>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.starts_at.strftime "%a, %B %d" %></td>
    <td><%= event.ends_at.strftime "%a, %B %d" %></td>
    <td><%= event.all_day %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'View', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
</tr>
</tbody>
</table>

<br />
<%= link_to 'Add New', new_event_path, class: "btn btn-medium btn-purple" %>

</div>

